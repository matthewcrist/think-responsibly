<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <title>Think Responsibly<%= ' - ' + current_article.title unless current_article.nil? %></title>

    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag "all", "media-elements/mediaelementplayer.css" %>
    <%= javascript_include_tag  "all", "media-elements/mediaelement-and-player.min.js" %>
  </head>

  <body class="<%= page_classes %>">
    <div class="main">
      <header>
        <h1 class="site-logo"><a href="/"><img src="/images/logo.svg" alt="Think Resonsibly" /></a></h1>
        <nav>
          <ul>
            <li><a href="/">Episodes</a></li>
            <li><a href="/">Twitter</a></li>
            <li><a href="/">iTunes</a></li>
            <li><a href="/">Feedback</a></li>
          </ul>
        </nav>
      </header>
      <% page_articles.each_with_index do |article, i| %>
        <article>
          <h2><%= article.title %> <span><%= article.date.strftime('%b %e') %></span></h2>
          <%= article.body %>
        </article>
      <% end %>
      <footer>Crafted by <a href="http://cantina.co" title="Cantina">Cantina</a> in Boston.</footer>
      <script>
        (function($) {

          window._media_player = new MediaElementPlayer('audio', {
            alwaysShowControls: true,
            iPadUseNativeControls: true,
            iPhoneUseNativeControls: true,
            AndroidUseNativeControls: true,
            audioWidth: '100%'
          });

          $(window._media_player).on("play", function(event) {
            $("a").not("[href*='?t=']").attr("target", "_blank");
          });

        })(jQuery);
      </script>
  </body>
</html>
